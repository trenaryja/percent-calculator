{
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"lint": "eslint .",
		"check": "tsc && pnpm lint && pnpm format -c && pnpm build",
		"format": "prettier -w . !\"pnpm-lock.yaml\"",
		"get-latest": "pnpm up -L -i -r"
	},
	"dependencies": {
		"@mantine/hooks": "^8.2.8",
		"daisyui": "^5.1.3",
		"next": "^15.5.2",
		"next-themes": "^0.4.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-icons": "^5.5.0",
		"remeda": "^2.30.0",
		"tailwindcss": "^4.1.12"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@tailwindcss/postcss": "^4.1.12",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"clsx": "^2.1.1",
		"eslint": "^9.34.0",
		"eslint-config-next": "^15.5.2",
		"prettier": "^3.6.2",
		"tailwind-merge": "^3.3.1",
		"typescript": "5.9.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"sharp",
			"unrs-resolver"
		]
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"printWidth": 120,
		"jsxSingleQuote": true,
		"useTabs": true
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	}
}
