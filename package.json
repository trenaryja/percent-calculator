		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-icons": "^5.5.0",
		"remeda": "^2.32.0",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"eslint": "^9.39.2",
		"eslint-config-next": "^16.0.10",
		"prettier": "^3.7.4",
		"typescript": "5.9.3"
